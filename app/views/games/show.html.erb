<div class="games">
  <h1><%= @game.title %></h1>




  <table style="width:80%">
    <tr>
      <th>Player Name</th>
      <% @stats.each do |stat| %>
      <th>
          <p><%= stat.name %></p>
        <% end %>
      </th>
    </tr>
    <% @players.each do |player| %>
    <tr>
      <td>
        <%= player.name %>
      </td>
        <td></td>
        <td></td>
        <td></td>
        <% end %>
    </tr>
  </table>


  <button class="back"><%= link_to "Back", games_path %></button>


</div>
